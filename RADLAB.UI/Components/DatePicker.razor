                _value = value;
            }
        }
    }

    [Parameter]
    public EventCallback<DateTime?> ValueChanged { get; set; }


    private Task OnValueChanged(ChangeEventArgs e)
    {
        try
        {
            Value = Convert.ToDateTime(e.Value.ToString());
        }
        catch
        {

        }

        return ValueChanged.InvokeAsync(Value);
    }


