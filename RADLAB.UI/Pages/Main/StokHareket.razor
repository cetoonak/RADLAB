@code
{
    [Inject] protected ILookupService lookupService { get; set; }
    [Inject] protected IRolService rolService { get; set; }
    [Inject] protected ISMSMailService smsMailService { get; set; }
    [Inject] protected IStokHareketService stokHareketService { get; set; }

    List<StokHareketDTO> DSStokHareket = new List<StokHareketDTO>();
    List<LookupBasicDTO> DSStokHareketTuruSorgu = new List<LookupBasicDTO>();
    List<LookupBasicDTO> DSStokHareketTuruKayitStokHareket = new List<LookupBasicDTO>();
    List<LookupBasicDTO> DSMarka = new List<LookupBasicDTO>();

    StokHareketDTO currentDTO = new StokHareketDTO();
    StokHareketCihazDTO currentStokHareketCihazDTO = new StokHareketCihazDTO();
    StokHareketFilterDTO filterDTO = new StokHareketFilterDTO() { PageNo = 1, PageSize = 10 };

    bool loading = false;

    bool YetkiGor = false;
    bool YetkiEkle = false;
    bool YetkiDegistir = false;
    bool YetkiSil = false;

    int RowCount = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            YetkiGor = await rolService.YetkiKontrolByYetki("Satış - Stok İşlemleri - Gör");
            YetkiEkle = await rolService.YetkiKontrolByYetki("Satış - Stok İşlemleri - Ekle");
            YetkiDegistir = await rolService.YetkiKontrolByYetki("Satış - Stok İşlemleri - Değiştir");
            YetkiSil = await rolService.YetkiKontrolByYetki("Satış - Stok İşlemleri - Sil");

            DSStokHareketTuruSorgu = await lookupService.GetLookupBasic("StokHareketTuru");
            DSStokHareketTuruKayitStokHareket = await lookupService.GetLookupBasic("StokHareketTuru");
            DSMarka = await lookupService.GetLookupFromMasterDetail("Cihaz", 0);

            await js.InvokeVoidAsync("dateRangePick", "tbTarihAraligi", true);

            await GetData();

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task GetData()
    {
        filterDTO.HareketTarihiAraligi = await js.InvokeAsync<string>("getValue", "tbTarihAraligi");

        var result = await stokHareketService.GetStokHareketList(filterDTO);

        if (result.Success)
        {
            DSStokHareket = result.Value;
            RowCount = result.RowCount;
        }
        else
        {
            await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");
        }
    }

    ////////////////////////////////////////// StokHareket //////////////////////////////////////////

    async Task Sorgula()
    {
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task PageNoChanged(int pageNo)
    {
        filterDTO.PageNo = pageNo;
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task PageSizeChanged(int pageSize)
    {
        filterDTO.PageSize = pageSize;
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task StokHareketTuruSecSorgu(object value)
    {
        filterDTO.StokHareketTuruId = Convert.ToInt32(value.ToString());
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task AddStokHareket()
    {
        currentDTO = new StokHareketDTO() { HareketTarihi = DateTime.Now };

        currentDTO.StokHareketCihazList = new List<StokHareketCihazDTO>();

        var dto = new StokHareketCihazDTO()
            {
                DataSourceModel = new List<LookupBasicDTO>(),
            };

        currentDTO.StokHareketCihazList.Add(dto);

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("bsPopupAc", "popupKayitStokHareket");
    }

    async Task DeleteKayitStokHareketCihaz(StokHareketCihazDTO dto)
    {
        currentDTO.StokHareketCihazList.Remove(dto);

        await InvokeAsync(StateHasChanged);
    }

    async Task EditStokHareket(int Id)
    {
        var fDTO = new StokHareketFilterDTO() { Id = Id, PageNo = 1, PageSize = 1, DonusTipi = 0 };

        var result = await stokHareketService.GetStokHareketList(fDTO);

        if (result.Success == false)
        {
            loading = false;

            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");

            return;
        }

        currentDTO = result.Value[0];

        foreach (var item in currentDTO.StokHareketCihazList)
        {
            item.DataSourceModel = new List<LookupBasicDTO>();
        }

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("bsPopupAc", "popupKayitStokHareket");
    }

    async Task KaydetKayitStokHareket()
    {
        if (currentDTO.HareketTarihi.HasValue == false || currentDTO.StokHareketTuruId == 0)
        {
            await js.InvokeVoidAsync("SweetMessage", "Hata", "İşlem tarihi ve hareket türü zorunlu alandır", "error");
            return;
        }

        if (currentDTO.StokHareketCihazList.Count == 0)
        {
            await js.InvokeVoidAsync("SweetMessage", "Hata", "Listede en az bir cihaz olmalıdır", "error");
            return;
        }

        if (currentDTO.Id == 0)
        {
            foreach (var item in currentDTO.StokHareketCihazList)
            {
                if (item.MarkaId == 0 || item.ModelId == 0 || item.Miktar == 0)
                {
                    await js.InvokeVoidAsync("SweetMessage", "Hata", "Marka, model ve miktar zorunlu alandır. Boş veri içeren satırları kaydetmek istemiyorsanız siliniz.", "error");
                    return;
                }
            }
        }

        var result = await stokHareketService.InsertOrUpdateStokHareket(currentDTO);

        if (result.Success == false)
        {
            loading = false;

            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");

            return;
        }

        loading = false;

        await GetData();

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("bsPopupKapat", "popupKayitStokHareket");

        await js.InvokeVoidAsync("SweetToast", "Kaydedildi", "success");
    }

    async Task DeleteStokHareket(StokHareketDTO dto)
    {
        var dtos = new List<StokHareketDTO>();

        foreach (var item in dto.StokHareketCihazList)
        {
            item.DataSourceModel = new List<LookupBasicDTO>();
        }

        dtos.Add(dto);

        var confirm = await js.InvokeAsync<bool>("SweetConfirm", "Uyarı", "Kayıt silinecek, emin misiniz?", "question", "Evet", "Hayır");

        if (confirm)
        {
            var resultDelete = await stokHareketService.DeleteStokHareket(dtos);

            if (resultDelete.Success == false)
            {
                await js.InvokeVoidAsync("SweetMessage", "Hata", resultDelete.Message, "error");
                return;
            }

            await GetData();

            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetToast", "Kayıt silindi", "success");
        }
    }

    public async Task ExportToExcel()
    {
        using (var workbook = new XLWorkbook())
