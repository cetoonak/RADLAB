    async Task AddStokHareketCihaz(StokHareketDTO dto)
    {
        bool AcilmisKayitVar = false;

        foreach (var StokHareketDTO in DSStokHareket)
        {
            var exist = StokHareketDTO.StokHareketCihazList.SingleOrDefault(x => x.Id == 0);

            if (exist != null)
            {
                AcilmisKayitVar = true;
                break;
            }
        }

        if (AcilmisKayitVar == false)
        {
            currentStokHareketCihazDTO = new StokHareketCihazDTO()
                {
                    StokHareketId = dto.Id,
                    DataSourceModel = new List<LookupBasicDTO>()
                };

            dto.StokHareketCihazList.Add(currentStokHareketCihazDTO);

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task EditStokHareketCihaz(StokHareketCihazDTO dto)
    {
        bool AcilmisKayitVar = false;

        foreach (var StokHareketDTO in DSStokHareket)
        {
            var exist = StokHareketDTO.StokHareketCihazList.SingleOrDefault(x => x.Id == 0 & x.StokHareketId > 0);

            if (exist != null)
            {
                AcilmisKayitVar = true;
                break;
            }
        }

        if (AcilmisKayitVar == false)
        {
            currentStokHareketCihazDTO = dto;

            dto.DataSourceModel = new List<LookupBasicDTO>();
            dto.DataSourceModel.AddRange(await lookupService.GetLookupFromMasterDetail("Cihaz", (dto.MarkaId == 0 ? -1 : dto.MarkaId)));

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task KaydetStokHareketCihaz(StokHareketCihazDTO dto)
    {
        if (dto.MarkaId == 0 || dto.ModelId == 0 || dto.Miktar <= 0)
        {
            await js.InvokeVoidAsync("SweetMessage", "Uyarı", $"Marka, model ve miktar girilmelidir", "error");

            return;
        }

        var result = await stokHareketService.InsertOrUpdateStokHareketCihaz(dto);

        if (result.Success == false)
        {
            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetMessage", "Uyarı", result.Message, "error");

            return;
        }

        await GetData();

        currentStokHareketCihazDTO = new StokHareketCihazDTO();

        var DSStokHareketRow = DSStokHareket.SingleOrDefault(x => x.Id == dto.StokHareketId);

        DSStokHareketRow.Expanded = true;

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("SweetToast", "Kaydedildi", "success");
    }

    async Task VazgecStokHareketCihaz(StokHareketDTO dto)
    {
        if (currentStokHareketCihazDTO.Id == 0)
        {
            dto.StokHareketCihazList.Remove(currentStokHareketCihazDTO);
        }
        else
        {
            currentStokHareketCihazDTO = new StokHareketCihazDTO();
        }

        await InvokeAsync(StateHasChanged);
    }

    async Task DeleteStokHareketCihaz(StokHareketCihazDTO dto)
    {
        var resultStokHareket = await stokHareketService.GetStokHareketList(new StokHareketFilterDTO() { Id = dto.StokHareketId, PageNo = 1, PageSize = 1 });

        if (resultStokHareket.Success == false)
        {
            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetMessage", "Hata", resultStokHareket.Message, "error");

            return;
        }

        if (resultStokHareket.Value[0].StokHareketCihazList.Count() == 1)
        {
            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetMessage", "Hata", "Son cihazı da silerseniz kayıt geçersiz olacak. Cihaz özelliklerini değiştirebilir veya stok hareketi kaydını tamamen silebilirsiniz.", "error");

            return;
        }

        var confirm = await js.InvokeAsync<bool>("SweetConfirm", "Uyarı", "Kayıt silinecek, emin misiniz?", "question", "Evet", "Hayır");

        if (confirm)
        {
            dto.DataSourceModel = new List<LookupBasicDTO>();

            var resultDelete = await stokHareketService.DeleteStokHareketCihaz(new List<StokHareketCihazDTO>() { dto } );

            if (resultDelete.Success == false)
            {
                await js.InvokeVoidAsync("SweetMessage", "Hata", resultDelete.Message, "error");
                return;
            }

            await GetData();

            DSStokHareket.SingleOrDefault(x => x.Id == dto.StokHareketId).Expanded = true;

            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetToast", "Kayıt silindi", "success");
        }
    }
