@page "/Main/StokHareket"

@inject IJSRuntime js

@using System.Threading
@using System.Threading.Tasks
@using System.Net.Http
@using System.Text.Json

<style>
    .input-group-text {
        font-size:0.8rem !important;
    }
</style>

<div class="card info-card">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td width="8%"></td>
                    <td width="8%" align="center">Hareket ID</td>
                    <td width="8%" align="center">Hareket Türü</td>
                    <td width="8%" align="center">İşlem Tarihi</td>
                    <td width="8%" align="center">Evrak No</td>
                    <td width="8%" align="center">Evrak Tarihi</td>
                    <td width="36%" align="center">Açıklama</td>
                    <td width="8%" align="center">Ürün Sayısı</td>
                    <td width="8%" align="center">
                        @if (YetkiEkle)
                        {
                            <button class="btn text-success grid-command" @onclick="AddStokHareket"><i class="bi bi-plus-circle"></i></button>
                        }
                    </td>
                </tr>
                <tr>
                    <td width="8%"></td>
                    <td width="8%">
                        <input class="form-control form-control-sm SpinButtonWithoutButtons text-center" type="number" @bind-value="filterDTO.Id">
                    </td>
                    <td width="8%">
                        <select class="form-select form-select-sm" @onchange="async eventArgs => { await StokHareketTuruSecSorgu(eventArgs.Value); }">
                            <option value="0"></option>
                            @foreach (var item in DSStokHareketTuruSorgu)
                            {
                                if (filterDTO.StokHareketTuruId == item.Id)
                                {
                                    <option selected value="@item.Id">@item.Ad</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Ad</option>
                                }
                            }
                        </select>
                    </td>
                    <td width="8%">
                        <input id="tbTarihAraligi" class="form-control form-control-sm" type="text" @bind-value="filterDTO.HareketTarihiAraligi" autocomplete="off" />
                    </td>
                    <td width="8%">
                        <input class="form-control form-control-sm" type="text" @bind-value="filterDTO.EvrakNo">
                    </td>
                    <td width="8%">
                    </td>
                    <td width="36%">
                        <input class="form-control form-control-sm" type="text" @bind-value="filterDTO.Aciklama">
                    </td>
                    <td width="8%">
                    </td>
                    <td width="8%" align="center">
                        <div class="btn-group">
                            <button class="btn text-success grid-command" @onclick="Sorgula"><i class="bi bi-search"></i></button>
                            <button class="btn text-success grid-command" @onclick="ExportToExcel"><i class="bi bi-file-earmark-excel"></i></button>
                        </div>
                    </td>
                </tr>
            </thead>
            <tbody>
                @if (DSStokHareket.ToList().Count == 0)
                {
                    <tr>
                        <td colspan="9" align="center" valign="bottom" height="64px">
                            <h6>Görüntülenecek Veri Yok</h6>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var data in DSStokHareket)
                    {
                        string checkBoxId = "ExpandCollapseCheckBox" + data.Id.ToString();
                        string tdCenterStyle = data.Expanded ? "border-top: 2px solid orange" : "";
                        string tdLeftStyle = data.Expanded ? "border-top: 2px solid orange; border-left: 2px solid orange" : "";
                        string tdRightStyle = data.Expanded ? "border-top: 2px solid orange; border-right: 2px solid orange" : "";
                        <tr>
                            <td width="8%" align="center" style="@tdLeftStyle">
                                <div class="ExpandCollapseDiv">
                                    <input id="@checkBoxId" type="checkbox" name="@checkBoxId" @bind="data.Expanded" />
                                    <label for="@checkBoxId"></label>
                                </div>
                            </td>
                            <td width="8%" align="center" style="@tdCenterStyle">@data.Id</td>
                            <td width="8%" align="center" style="@tdCenterStyle">@data.StokHareketTuru</td>
                            <td width="10%" align="center" style="@tdCenterStyle">@data.HareketTarihi.Value.ToString("dd.MM.yyyy HH:mm")</td>
                            <td width="8%" align="center" style="@tdCenterStyle">@data.EvrakNo</td>
                            <td width="8%" align="center" style="@tdCenterStyle">@(data.EvrakTarihi.HasValue ? data.EvrakTarihi.Value.ToString("dd.MM.yyyy") : "")</td>
                            <td width="36%" align="center" style="@tdCenterStyle">@data.Aciklama</td>
                            <td width="8%" align="center" style="@tdCenterStyle">@data.DetailCount</td>
                            <td width="8%" align="center" style="@tdRightStyle">
                                <div class="btn-group">
                                    @if (YetkiDegistir)
                                    {
                                        <button class="btn text-info grid-command" @onclick="@(async () => { await EditStokHareket(data.Id); })" data-bs-toggle="tooltip" data-bs-placement="top" title="Düzenle"><i class="bi bi-pencil"></i></button>
                                    }
                                    @if (YetkiSil)
                                    {
                                        <button class="btn text-danger grid-command" @onclick="@(async () => { await DeleteStokHareket(data); })" data-bs-toggle="tooltip" data-bs-placement="top" title="Sil"><i class="bi bi-trash3"></i></button>
                                    }
                                </div>
                            </td>
                        </tr>
                        @if (data.Expanded)
                        {
                            <tr>
                                <td colspan="9" style="border: 2px solid orange; border-top:none;">
                                    <table class="table table-bordered table-hover" style="font-size:0.75rem;">
                                        <thead>
                                            <tr>
                                                <td width="10%" align="center">Cihaz ID</td>
                                                <td width="30%" align="center">Marka</td>
                                                <td width="30%" align="center">Model</td>
                                                <td width="10%" align="center">Miktar</td>
                                                <td width="20%" align="center">
                                                    @if (YetkiEkle)
                                                    {
                                                        <button class="btn text-success grid-command" @onclick="@(async () => { await AddStokHareketCihaz(data); })" data-bs-toggle="tooltip" data-bs-placement="top" title="StokHareketCihaz Ekle"><i class="bi bi-plus-circle"></i></button>
                                                    }
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (data.StokHareketCihazList.ToList().Count == 0)
                                            {
                                                <tr>
                                                    <td colspan="5" align="center" valign="bottom" height="64px">
                                                        <h6>Görüntülenecek Veri Yok</h6>
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                @foreach (var StokHareketCihaz in data.StokHareketCihazList)
                                                {
                                                    <tr>
                                                        <td width="10%" align="center">@StokHareketCihaz.Id</td>
                                                        @if (currentStokHareketCihazDTO.Id == StokHareketCihaz.Id)
                                                        {
                                                            <td width="30%" align="center">
                                                                <select class="form-select form-select-sm" @onchange="async eventArgs => { await MarkaSec(eventArgs.Value, StokHareketCihaz); }">
                                                                    <option value="0"></option>
                                                                    @foreach (var item in DSMarka)
                                                                    {
                                                                        if (StokHareketCihaz.MarkaId == item.Id)
                                                                        {
                                                                            <option selected value="@item.Id">@item.Ad</option>
                                                                        }
                                                                        else
                                                                        {
                                                                            <option value="@item.Id">@item.Ad</option>
                                                                        }
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td width="30%" align="center">
                                                                <select class="form-select form-select-sm" @bind="StokHareketCihaz.ModelId">
                                                                    <option value="0"></option>
                                                                    @foreach (var item in StokHareketCihaz.DataSourceModel)
                                                                    {
                                                                        <option value="@item.Id">@item.Ad</option>
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td width="10%" align="center">
                                                                <input type="number" class="form-control form-control-sm SpinButtonWithoutButtons" style="text-align:center;" @bind-value="StokHareketCihaz.Miktar" />
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td width="25%" align="center">@StokHareketCihaz.Marka</td>
                                                            <td width="25%" align="center">@StokHareketCihaz.Model</td>
                                                            <td width="10%" align="center">@StokHareketCihaz.Miktar</td>
                                                        }
                                                        @if (currentStokHareketCihazDTO.Id == StokHareketCihaz.Id)
                                                        {
                                                            <td width="20%" align="center">
                                                                <div class="btn-group">
                                                                    <button class="btn text-success grid-command" @onclick="@(async () => { await KaydetStokHareketCihaz(currentStokHareketCihazDTO); })"><i class="bi bi-check-circle"></i></button>
                                                                    <button class="btn text-primary grid-command" @onclick="@(async () => { await VazgecStokHareketCihaz(data); })"><i class="bi bi-x-circle"></i></button>
                                                                </div>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td width="20%" align="center">
                                                                <div class="btn-group">
                                                                    @if (YetkiDegistir)
                                                                    {
                                                                        <button class="btn text-info grid-command" @onclick=@(async () => { await EditStokHareketCihaz(StokHareketCihaz); }) data-bs-toggle="tooltip" data-bs-placement="top" title="Düzenle"><i class="bi bi-pencil"></i></button>
                                                                    }
                                                                    @if (YetkiSil)
                                                                    {
                                                                        <button class="btn text-danger grid-command" @onclick="@(async () => { await DeleteStokHareketCihaz(StokHareketCihaz); })" data-bs-toggle="tooltip" data-bs-placement="top" title="Sil"><i class="bi bi-trash3"></i></button>
                                                                    }
                                                                </div>
                                                            </td>
                                                        }
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
            <thead>
                <tr>
                    <td colspan="9" align="center">
                        <Pager RowCount="@RowCount"
                               PageNoChanged="@((int pageNo) => PageNoChanged(pageNo))"
                               PageSizeChanged="@((int pageSize) => PageSizeChanged(pageSize))"></Pager>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</div>

<button id="popupKayitStokHareketAc" type="button" data-bs-toggle="modal" data-bs-target="#popupKayitStokHareket" style="visibility:hidden;">
</button>

<div class="modal fade" id="popupKayitStokHareket" tabindex="-1" aria-labelledby="popupKayitStokHareketLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="popupKayitStokHareketLabel">Stok Hareket Kaydı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="padding-bottom:0">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="spnHareketTarihiKayitStokHareket" style="width: 160px;">İşlem Tarihi</span>
                            <input class="form-control form-control-sm" type="datetime-local" @bind-value="currentDTO.HareketTarihi" aria-describedby="spnHareketTarihiKayitStokHareket">
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="spnStokHareketTuruayitStokHareket" style="width: 160px;">Stok Hareketi Türü</span>
                            <select class="form-select form-select-sm" @bind="currentDTO.StokHareketTuruId" aria-describedby="spnStokHareketTuruayitStokHareket">
                                <option value="0"></option>
                                @foreach (var item in DSStokHareketTuruKayitStokHareket)
                                {
                                    <option value="@item.Id">@item.Ad</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="spnEvrakNoKayitStokHareket" style="width: 160px;">Evrak No</span>
                            <input class="form-control form-control-sm" type="text" @bind-value="currentDTO.EvrakNo" aria-describedby="spnEvrakNoKayitStokHareket">
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="spnEvrakTarihiKayitStokHareket" style="width: 160px;">Evrak Tarihi</span>
                            <input class="form-control form-control-sm" type="date" @bind-value="currentDTO.EvrakTarihi" aria-describedby="spnEvrakTarihiKayitStokHareket">
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="spnAciklamaKayitStokHareket" style="width: 160px;">Açıklama</span>
                            <InputTextArea class="form-control form-control-sm" type="text" @bind-Value="currentDTO.Aciklama" rows="4" aria-describedby="spnAciklamaKayitStokHareket">
                            </InputTextArea>
                        </div>
                    </div>
                    @if (currentDTO.Id == 0)
                    {
                        <div class="col-md-12 mb-3">
                            @if (currentDTO.StokHareketCihazList != null)
                            {
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <td width="35%" align="center">Marka</td>
                                            <td width="35%" align="center">Model</td>
                                            <td width="15%" align="center">Miktar</td>
                                            <td width="15%" align="center">
                                                <button class="btn text-success grid-command" @onclick="AddStokHareketCihazKayitStokHareket" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bi bi-plus-circle"></i></button>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var StokHareketCihaz in currentDTO.StokHareketCihazList)
                                        {
                                            <tr>
                                                <td width="35%" align="center">
                                                    <select class="form-select form-select-sm" @onchange="async eventArgs => { await MarkaSec(eventArgs.Value, StokHareketCihaz); }">
                                                        <option value="0"></option>
                                                        @foreach (var item in DSMarka)
                                                        {
                                                            if (StokHareketCihaz.MarkaId == item.Id)
                                                            {
                                                                <option selected value="@item.Id">@item.Ad</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.Id">@item.Ad</option>
                                                            }
                                                        }
                                                    </select>
                                                </td>
                                                <td width="35%" align="center">
                                                    <select class="form-select form-select-sm" @bind="StokHareketCihaz.ModelId">
                                                        <option value="0"></option>
                                                        @foreach (var item in StokHareketCihaz.DataSourceModel)
                                                        {
                                                            <option value="@item.Id">@item.Ad</option>
                                                        }
                                                    </select>
                                                </td>
                                                <td width="15%" align="center">
                                                    <input type="number" class="form-control form-control-sm SpinButtonWithoutButtons" style="text-align:center;" @bind-value="StokHareketCihaz.Miktar" />
                                                </td>
                                                <td width="15%" align="center">
                                                    <button class="btn text-danger grid-command" @onclick="@(async () => { await DeleteKayitStokHareketCihaz(StokHareketCihaz); })" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bi bi-trash3"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success btn-sm" @onclick="KaydetKayitStokHareket"><i class="bi bi-check-circle"></i>&nbsp;Kaydet</button>
                <button id="popupKayitStokHareketKapat" type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i>&nbsp;Vazgeç</button>
            </div>
        </div>
    </div>
</div>

