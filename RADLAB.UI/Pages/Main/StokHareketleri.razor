@page "/Main/StokHareketleri"

@inject IJSRuntime js
@inject NavigationManager navManager

@using System.Threading
@using System.Threading.Tasks
@using System.Net.Http
@using System.Text.Json

<div class="card info-card">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td width="10%" align="center">Marka</td>
                    <td width="10%" align="center">Model</td>
                    <td width="10%" align="center">Giren</td>
                    <td width="10%" align="center">Çıkan</td>
                    <td width="16%" align="center">Hareket Türü</td>
                    <td width="16%" align="center">Hareket Tarihi</td>
                    <td width="28%" align="center">Açıklama</td>
                </tr>
                <tr>
                    <td width="10%">
                        <select class="form-select form-select-sm" @onchange="async eventArgs => { await MarkaSec(eventArgs.Value); }">
                            <option value="0"></option>
                            @foreach (var item in DSMarka)
                            {
                                if (filterDTO.MarkaId == item.Id)
                                {
                                    <option selected value="@item.Id">@item.Ad</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Ad</option>
                                }
                            }
                        </select>
                    </td>
                    <td width="10%">
                        <select class="form-select form-select-sm" @onchange="async eventArgs => { await ModelSec(eventArgs.Value); }">
                            <option value="0"></option>
                            @foreach (var item in DSModel)
                            {
                                if (filterDTO.ModelId == item.Id)
                                {
                                    <option selected value="@item.Id">@item.Ad</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Ad</option>
                                }
                            }
                        </select>
                    </td>
                    <td width="10%">
                    </td>
                    <td width="10%">
                    </td>
                    <td width="16%">
                        <select class="form-select form-select-sm" @onchange="async eventArgs => { await StokHareketTuruSec(eventArgs.Value); }">
                            <option value="0"></option>
                            @foreach (var item in DSStokHareketTuru)
                            {
                                if (filterDTO.StokHareketTuruId == item.Id)
                                {
                                    <option selected value="@item.Id">@item.Ad</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Ad</option>
                                }
                            }
                        </select>
                    </td>
                    <td width="16%">
                        <input id="tbTarihAraligi" class="form-control form-control-sm" type="text" @bind-value="filterDTO.HareketTarihiAraligi" autocomplete="off" />
                    </td>
                    <td width="28%">
                    </td>
                </tr>
            </thead>
            @if (DSStokHareketleri.ToList().Count == 0)
            {
                <tbody>
                    <tr>
                        <td colspan="7" align="center" valign="bottom" height="64px">
                            <h6>Görüntülenecek Veri Yok</h6>
                        </td>
                    </tr>
                </tbody>
            }
            else
            {
                <tbody>
                    @foreach (var data in DSStokHareketleri)
                    {
                        <tr>
                            <td width="10%" align="center">@data.Marka</td>
                            <td width="10%" align="center">@data.Model</td>
                            <td width="10%" align="center">@data.MiktarGiren</td>
                            <td width="10%" align="center">@data.MiktarCikan</td>
                            <td width="16%" align="center">@data.StokHareketTuru</td>
                            <td width="16%" align="center">@data.HareketTarihi.Value.ToString("dd.MM.yyyy HH:mm")</td>
                            <td width="28%" align="center">@data.Aciklama</td>
                        </tr>
                    }
                </tbody>
            }
            <thead>
                <tr>
                    <td colspan="7" align="center">
                        <Pager RowCount="@RowCount"
                               PageNoChanged="@((int pageNo) => PageNoChanged(pageNo))"
                               PageSizeChanged="@((int pageSize) => PageSizeChanged(pageSize))"></Pager>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</div>

@if (loading)
{
    <div class="progressBackground">
        <div class="progressPopup">
            <img alt="Bekleyiniz..." src="img/loading.gif" width="100" height="100" />
        </div>
    </div>
}

@code
{
    [Inject] protected ILookupService lookupService { get; set; }
    [Inject] protected IRolService rolService { get; set; }
    [Inject] protected IStokHareketService stokHareketService { get; set; }

    List<StokHareketleriDTO> DSStokHareketleri = new List<StokHareketleriDTO>();
    List<LookupBasicDTO> DSMarka = new List<LookupBasicDTO>();
    List<LookupBasicDTO> DSModel = new List<LookupBasicDTO>();
    List<LookupBasicDTO> DSStokHareketTuru = new List<LookupBasicDTO>();

    StokHareketleriFilterDTO filterDTO = new StokHareketleriFilterDTO() { PageNo = 1, PageSize = 10 };

    bool loading = false;

    bool YetkiGor = false;

    int RowCount = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await js.InvokeVoidAsync("dateRangePick", "tbTarihAraligi", true);

            YetkiGor = await rolService.YetkiKontrolByYetki("Satış - Stok Hareketleri - Gör");

            DSMarka = await lookupService.GetLookupFromMasterDetail("Cihaz", 0);
            DSStokHareketTuru = await lookupService.GetLookupBasic("StokHareketTuru");

            DSStokHareketTuru.Add(new LookupBasicDTO() { Id = 100, Ad = "Online Satış" });

            await GetData();

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task GetData()
    {
        try
        {
            filterDTO.HareketTarihiAraligi = await js.InvokeAsync<string>("getValue", "tbTarihAraligi");

            var result = await stokHareketService.GetStokHareketleriList(filterDTO);

            if (result.Success)
            {
                DSStokHareketleri = result.Value;
                RowCount = result.RowCount;
            }
            else
            {
                await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");
            }
        }
        catch
        {

        }
    }

    async Task Sorgula()
    {
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task PageNoChanged(int pageNo)
    {
        filterDTO.PageNo = pageNo;
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task PageSizeChanged(int pageSize)
    {
        filterDTO.PageSize = pageSize;
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task MarkaSec(object value)
    {
        int MarkaId = Convert.ToInt32(value.ToString());

        DSModel = await lookupService.GetLookupFromMasterDetail("Cihaz", (MarkaId == 0 ? -1 : MarkaId));

        filterDTO.MarkaId = MarkaId;
        filterDTO.ModelId = 0;

        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task ModelSec(object value)
    {
        filterDTO.ModelId = Convert.ToInt32(value.ToString());

        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task StokHareketTuruSec(object value)
    {
        filterDTO.StokHareketTuruId = Convert.ToInt32(value.ToString());

        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    public async Task ExportToExcel()
    {
        using (var workbook = new XLWorkbook())
        {
            IXLWorksheet worksheet = workbook.Worksheets.Add("Sayfa1");

            worksheet.Cell(1, 1).Value = "Marka";
            worksheet.Cell(1, 2).Value = "Model";
            worksheet.Cell(1, 3).Value = "Giren";
            worksheet.Cell(1, 4).Value = "Çıkan";
            worksheet.Cell(1, 5).Value = "Hareket Türü";
            worksheet.Cell(1, 6).Value = "Hareket Tarihi";
            worksheet.Cell(1, 7).Value = "Açıklama";

            for (int i = 1; i <= 7; i++)
            {
                worksheet.Cell(1, i).Style.Font.Bold = true;
            }

            int index = 1;

            foreach (var data in DSStokHareketleri)
            {
                worksheet.Cell(index + 1, 1).Value = data.Marka;
                worksheet.Cell(index + 1, 2).Value = data.Model;
                worksheet.Cell(index + 1, 3).Value = data.MiktarGiren;
                worksheet.Cell(index + 1, 4).Value = data.MiktarCikan;
                worksheet.Cell(index + 1, 5).Value = data.StokHareketTuru;
                worksheet.Cell(index + 1, 6).Value = data.HareketTarihi.Value.ToString("dd.MM.yyyy HH:mm");
                worksheet.Cell(index + 1, 7).Value = data.Aciklama;

                index++;
            }

            using (var stream = new MemoryStream())
            {
                workbook.SaveAs(stream);
                var content = stream.ToArray();
                var fileName = "StokHareketleriListesi" + DateTime.Now.ToString("yyyyMMddss") + ".xlsx";
                await js.InvokeAsync<object>("saveAsFile", fileName, Convert.ToBase64String(content));
            }
        }
    }
}