<style>
    .gallery {
        --s: 200px; /* control the size */
        --g: 20px; /* control the gap */
        display: grid;
        margin: calc(var(--s) + var(--g));
        margin-top: 180px;
        margin-bottom: -20px;
        place-content: center;
    }

        .gallery > div {
            grid-area: 1/1;
            width: var(--s);
            aspect-ratio: 0.866;
            object-fit: cover;
            clip-path: polygon(0% 25%,0% 75%,50% 100%,100% 75%,100% 25%,50% 0);
            transform: translate(var(--_x,0),var(--_y,0)) scale(var(--_t,1));
            cursor: pointer;
            /*filter: grayscale(80%);*/
            transition: .2s linear;
            align-content: center;
            text-align: center;
            color: white;
        }

            .gallery > div:hover {
                filter: grayscale(0);
                z-index: 1;
                --_t: 1.2;
            }

            .gallery > div:nth-child(1) {
                --_x: calc(-100% - var(--g))
            }

            .gallery > div:nth-child(3) {
                --_y: calc(-75% - .87*var(--g));
                --_x: calc(-50% - .5*var(--g));
            }

            .gallery > div:nth-child(4) {
                --_y: calc(-75% - .87*var(--g));
                --_x: calc(-150% - 1.5*var(--g))
            }

            .gallery > div:nth-child(5) {
                --_y: calc(-75% - .87*var(--g));
                --_x: calc(50% + .5*var(--g));
            }

            .gallery > div:nth-child(6) {
                --_y: calc(-75% - .87*var(--g));
                --_x: calc(150% + 1.5*var(--g));
            }

            .gallery > div:nth-child(7) {
                --_x: calc(100% + var(--g))
            }
</style>

