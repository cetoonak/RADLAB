@page "/Tanim/IndirimKodu"

@inject IJSRuntime js

@using System.Threading
@using System.Threading.Tasks
@using System.Net.Http
@using System.Text.Json

<div class="card info-card">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td width="15%" align="center">İndirim Kodu</td>
                    <td width="15%" align="center">İlişkili GSM</td>
                    <td width="15%" align="center">İndirim Tutarı</td>
                    <td width="25%" align="center">Kullanan</td>
                    <td width="15%" align="center">Başvuru Takip No</td>
                    <td width="15%" align="center">
                        <button class="btn text-success grid-command" @onclick="ExportToExcel"><i class="bi bi-file-earmark-excel"></i></button>
                    </td>
                </tr>
                <tr>
                    <td width="15%">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm" aria-describedby="btnIndirimKoduUret" @bind-value="addingDTO.IndirimKodu">
                            <button id="btnIndirimKoduUret" class="input-group-text btn btn-sm btn-outline-secondary" style="border-color: #ced4da;" @onclick="@(async () => { await IndirimKoduUret(addingDTO); })">...</button>
                        </div>
                    </td>
                    <td width="15%">
                        <input class="form-control form-control-sm" type="text" @bind-value="addingDTO.GSM" />
                    </td>
                    <td width="15%">
                        <input class="form-control form-control-sm SpinButtonWithoutButtons" type="number" @bind-value="addingDTO.Tutar" />
                    </td>
                    <td width="25%">
                    </td>
                    <td width="15%">
                    </td>
                    <td width="15%" align="center">
                        @if (YetkiEkle)
                        {
                            <button class="btn text-success grid-command" @onclick="@(async () => { await Kaydet(addingDTO); })"><i class="bi bi-plus-circle"></i></button>
                        }
                    </td>
                </tr>
            </thead>
            @if (DS.ToList().Count == 0)
            {
                <tbody>
                    <tr>
                        <td colspan="6" align="center" valign="bottom" height="64px">
                            <h6>Görüntülenecek Veri Yok</h6>
                        </td>
                    </tr>
                </tbody>
            }
            else
            {
                <tbody>
                    @foreach (var data in DS)
                    {
                        <tr>
                            @if (editingDTO.Id == data.Id)
                            {
                                <td width="15%">
                                    <input class="form-control form-control-sm" type="text" @bind-value="editingDTO.IndirimKodu" />
                                </td>
                                <td width="15%">
                                    <input class="form-control form-control-sm" type="text" @bind-value="editingDTO.GSM" />
                                </td>
                                <td width="15%">
                                    <input class="form-control form-control-sm SpinButtonWithoutButtons" type="number" @bind-value="editingDTO.Tutar" />
                                </td>
                                <td width="25%" align="center">
                                    @data.AdSoyadUnvan
                                </td>
                                <td width="15%" align="center">
                                    @data.BasvuruTakipNo
                                </td>
                                <td width="15%" align="center">
                                    <div class="btn-group">
                                        <button class="btn text-success grid-command" @onclick="@(async () => { await Kaydet(editingDTO); })"><i class="bi bi-check-circle"></i></button>
                                        <button class="btn text-primary grid-command" @onclick="Vazgec"><i class="bi bi-x-circle"></i></button>
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td width="15%" align="center">@data.IndirimKodu</td>
                                <td width="15%" align="center">@data.GSM</td>
                                <td width="15%" align="center">@data.Tutar.ToString("###,##0.#0₺")</td>
                                <td width="25%" align="center">@data.AdSoyadUnvan</td>
                                <td width="15%" align="center">@data.BasvuruTakipNo</td>
                                <td width="15%" align="center">
                                    <div class="btn-group">
                                        @if (YetkiDegistir)
                                        {
                                            <button class="btn text-primary grid-command" @onclick="@(async () => { await Edit(data); })"><i class="bi bi-pencil"></i></button>
                                            <button class="btn text-info grid-command" @onclick="@(async () => { await SMS(data); })"><i class="bi bi-chat-left-text"></i></button>
                                        }
                                        @if (YetkiSil)
                                        {
                                            <button class="btn text-danger grid-command" @onclick="@(async () => { await Delete(data); })"><i class="bi bi-trash3"></i></button>
                                        }
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            }
            <thead>
                <tr>
                    <td colspan="6" align="center">
                        <Pager RowCount="@RowCount"
                               PageNoChanged="@((int pageNo) => PageNoChanged(pageNo))"
                               PageSizeChanged="@((int pageSize) => PageSizeChanged(pageSize))"></Pager>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</div>

@if (loading)
{
    <div class="progressBackground">
        <div class="progressPopup">
            <img alt="Bekleyiniz..." src="img/loading.gif" width="100" height="100" />
        </div>
    </div>
}

@code
{
    [Inject] protected IRolService rolService { get; set; }
    [Inject] protected ISMSMailService smsMailService { get; set; }
    [Inject] protected IIndirimKoduService indirimKoduService { get; set; }

    List<IndirimKoduDTO> DS = new List<IndirimKoduDTO>();

    IndirimKoduDTO addingDTO = new IndirimKoduDTO();
    IndirimKoduDTO editingDTO = new IndirimKoduDTO();

    IndirimKoduFilterDTO filterDTO = new IndirimKoduFilterDTO() { PageNo = 1, PageSize = 10 };

    bool loading = false;
    bool YetkiEkle = false;
    bool YetkiDegistir = false;
    bool YetkiSil = false;
    int RowCount = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            YetkiEkle = await rolService.YetkiKontrolByYetki("Tanımlamalar - İndirim Kodları - Ekle");
            YetkiDegistir = await rolService.YetkiKontrolByYetki("Tanımlamalar - İndirim Kodları - Değiştir");
            YetkiSil = await rolService.YetkiKontrolByYetki("Tanımlamalar - İndirim Kodları - Sil");

            await GetData();

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task GetData()
    {
        var result = await indirimKoduService.GetIndirimKoduList(filterDTO);

        if (result.Success)
        {
            DS = result.Value;
            RowCount = result.RowCount;
        }
        else
        {
            await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");
        }
    }

    async Task PageNoChanged(int pageNo)
    {
        filterDTO.PageNo = pageNo;
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task PageSizeChanged(int pageSize)
    {
        filterDTO.PageSize = pageSize;
        await GetData();
        await InvokeAsync(StateHasChanged);
    }

    async Task IndirimKoduUret(IndirimKoduDTO dto)
    {
        Random random = new Random();

        const string chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";

        var kod = new string(Enumerable.Repeat(chars, 6).Select(s => s[random.Next(s.Length)]).ToArray());

        dto.IndirimKodu = kod;

        await InvokeAsync(StateHasChanged);
    }

    async Task SMS(IndirimKoduDTO dto)
    {
        var confirm = await js.InvokeAsync<bool>("SweetConfirm", "Uyarı", "İndirim kodu ilgili GSM numarasına gönderilecek, devam edilsin mi?", "question", "Evet", "Hayır");

        if (confirm)
        {
            string tutar = dto.Tutar.ToString("###,##0.#0");

            string mesaj = $@"Kalibrasyon basvurusu sirasinda kullanabileceginiz {tutar} TL tutarindaki {dto.IndirimKodu} indirim kodu hattiniza tanimlanmistir. RADLAB";

            var resultSMS = await smsMailService.SendSMS(dto.GSM, mesaj);

            if (resultSMS.Success)
            {
                await js.InvokeVoidAsync("SweetMessage", "Bilgi", "SMS gönderildi", "success");
            }
            else
            {
                await js.InvokeVoidAsync("SweetMessage", "Hata", resultSMS.Message, "error");
            }

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task Edit(IndirimKoduDTO dto)
    {
        editingDTO = dto;

        await InvokeAsync(StateHasChanged);
    }

    async Task Kaydet(IndirimKoduDTO dto)
    {
        if (string.IsNullOrEmpty(dto.IndirimKodu) || string.IsNullOrEmpty(dto.GSM) || dto.Tutar == 0)
        {
            await js.InvokeVoidAsync("SweetToast", "İndirim kodu, GSM ve Tutar bilgileri girilmelidir", "error");
            return;
        }

        loading = true;

        var result = await indirimKoduService.InsertOrUpdateIndirimKodu(dto);

        if (result.Success == false)
        {
            loading = false;
            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetToast", result.Message, "error");
            return;
        }

        await GetData();

        if (dto == addingDTO)
            addingDTO = new IndirimKoduDTO();
        else if (dto == editingDTO)
            editingDTO = new IndirimKoduDTO();

        loading = false;

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("SweetToast", "Kaydedildi", "success");
    }

    async Task Vazgec()
    {
        editingDTO = new IndirimKoduDTO();

        await InvokeAsync(StateHasChanged);
    }

    async Task Delete(IndirimKoduDTO dto)
    {
        var dtos = new List<IndirimKoduDTO>();

        dtos.Add(dto);

        var confirm = await js.InvokeAsync<bool>("SweetConfirm", "Uyarı", "Kayıt silinecek, emin misiniz?", "question", "Evet", "Hayır");

        if (confirm)
        {
            var result = await indirimKoduService.DeleteIndirimKodu(dtos);

            if (result.Success == false)
            {
                await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");
                return;
            }

            await GetData();

            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetToast", "Kayıtlar silindi", "success");
        }
    }

    public async Task ExportToExcel()
    {
        using (var workbook = new XLWorkbook())
        {
            IXLWorksheet worksheet = workbook.Worksheets.Add("Sayfa1");

            worksheet.Cell(1, 1).Value = "İndirim Kodu";
            worksheet.Cell(1, 2).Value = "İlişkili GSM";
            worksheet.Cell(1, 3).Value = "İndirim Tutarı";
            worksheet.Cell(1, 4).Value = "Kullanan";
            worksheet.Cell(1, 5).Value = "Başvuru Takip No";

            for (int i = 1; i <= 5; i++)
            {
                worksheet.Cell(1, i).Style.Font.Bold = true;
            }

            int index = 1;

            foreach (var data in DS)
            {
                worksheet.Cell(index + 1, 1).Value = data.IndirimKodu;
                worksheet.Cell(index + 1, 2).Value = data.GSM;
                worksheet.Cell(index + 1, 3).Value = data.Tutar.ToString("###,##0.#0");
                worksheet.Cell(index + 1, 4).Value = data.AdSoyadUnvan;
                worksheet.Cell(index + 1, 5).Value = data.BasvuruTakipNo;

                index++;
            }

            using (var stream = new MemoryStream())
            {
                workbook.SaveAs(stream);
                var content = stream.ToArray();
                var fileName = "IndirimKoduListesi" + DateTime.Now.ToString("yyyyMMddss") + ".xlsx";
                await js.InvokeAsync<object>("saveAsFile", fileName, Convert.ToBase64String(content));
            }
        }
    }
}