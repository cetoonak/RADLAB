@page "/Tanim/Egitim"

@inject IJSRuntime js

@using System.Threading
@using System.Threading.Tasks
@using System.Net.Http
@using System.Text.Json

<div class="card info-card">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td width="10%" align="center">Sıra</td>
                    <td width="60%">Eğitim Adı</td>
                    <td width="10%" align="center">Kısaltma</td>
                    <td width="10%" align="center">Tipi</td>
                    <td width="10%" align="center">
                        @if (YetkiEkle)
                        {
                            <button class="btn text-success grid-command" @onclick="Add"><i class="bi bi-plus-circle "></i></button>
                        }
                        <button class="btn text-success grid-command" @onclick="ExportToExcel"><i class="bi bi-file-earmark-excel"></i></button>
                    </td>
                </tr>
            </thead>
            @if (DataSource.ToList().Count == 0)
            {
                <tbody>
                    <tr>
                        <td colspan="5" align="center" valign="bottom" height="64px">
                            <h6>Görüntülenecek Veri Yok</h6>
                        </td>
                    </tr>
                </tbody>
            }
            else
            {
                <tbody>
                    @foreach (var data in DataSource)
                    {
                        <tr>
                            <td width="10%" align="center">@data.Sira</td>
                            <td width="60%">@data.Egitim</td>
                            <td width="10%" align="center">@data.Kisaltma</td>
                            <td width="10%" align="center">@(data.NormalGunluk == 1 ? "Normal" : (data.NormalGunluk == 2 ? "Günlük" : ""))</td>
                            <td width="10%" align="center">
                                @if (YetkiDegistir)
                                {
                                    <button class="btn text-info grid-command" @onclick="@(async () => { await Edit(data.Id); })"><i class="bi bi-pencil"></i></button>
                                }
                                @if (YetkiSil)
                                {
                                    <button class="btn text-danger grid-command" @onclick="@(async () => { await Delete(data.Id); })"><i class="bi bi-trash3"></i></button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>

<button id="popupKayitAc" type="button" data-bs-toggle="modal" data-bs-target="#popupKayit" style="visibility:hidden;">
</button>

<div class="modal fade" id="popupKayit" tabindex="-1" aria-labelledby="popupKayitLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <EditForm Model="@currentDTO">
                <DataAnnotationsValidator />
                <div class="modal-header">
                    <h5 class="modal-title" id="popupKayitLabel">Egitim Kaydı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-floating">
                                <input name="tbEgitim" class="form-control form-control-sm" type="text" @bind-value="currentDTO.Egitim"/>
                                <label for="tbEgitim">Eğitim Adı</label>
                                <ValidationMessage For="@(() => currentDTO.Egitim)" />
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-floating">
                                <input name="tbBaslik" class="form-control form-control-sm" type="text" @bind-value="currentDTO.Baslik"/>
                                <label for="tbBaslik">Eğitim Başlığı</label>
                                <ValidationMessage For="@(() => currentDTO.Baslik)" />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-floating">
                                <input name="tbKisaltma" class="form-control form-control-sm" type="text" @bind-value="currentDTO.Kisaltma"/>
                                <label for="tbKisaltma">Kısaltma</label>
                                <ValidationMessage For="@(() => currentDTO.Kisaltma)" />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-floating">
                                <select id="ddlNormalGunluk" class="form-select form-select-sm" @bind="currentDTO.NormalGunluk">
                                    <option value="0"></option>
                                    <option value="1">Normal</option>
                                    <option value="2">Günlük</option>
                                </select>
                                <label for="ddlNormalGunluk">Eğitim Tipi</label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-floating">
                                <input name="tbSira" type="number" class="form-control form-control-sm SpinButtonWithoutButtons" @bind-value="currentDTO.Sira"/>
                                <label for="tbSira">Sıra</label>
                                <ValidationMessage For="@(() => currentDTO.Sira)" />
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label>Eğitimin Amacı</label>
                            <RadzenHtmlEditor @bind-Value=@currentDTO.Amac style="height: 200px; margin-bottom: 1rem;" UploadUrl="upload/image">
                            </RadzenHtmlEditor>
                            <ValidationMessage For="@(() => currentDTO.Amac)" />
                        </div>
                        <div class="col-md-12">
                            <label>Katılımcılarda Aranan Şartlar</label>
                            <RadzenHtmlEditor @bind-Value=@currentDTO.Sart style="height: 200px; margin-bottom: 1rem;" UploadUrl="upload/image">
                            </RadzenHtmlEditor>
                            <ValidationMessage For="@(() => currentDTO.Sart)" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-sm" @onclick="Save"><i class="bi bi-check-circle"></i>&nbsp;Kaydet</button>
                    <button id="popupKayitKapat" type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i>&nbsp;Vazgeç</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@if (loading)
{
    <div class="progressBackground">
        <div class="progressPopup">
            <img alt="Bekleyiniz..." src="img/loading.gif" width="100" height="100" />
        </div>
    </div>
}

@code
{
    [Inject] protected IRolService rolService { get; set; }
    [Inject] protected IEgitimService egitimService { get; set; }

    List<EgitimDTO> DataSource = new List<EgitimDTO>();

    EgitimDTO currentDTO = new EgitimDTO();

    bool loading = false;
    bool YetkiEkle = false;
    bool YetkiDegistir = false;
    bool YetkiSil = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            YetkiEkle = await rolService.YetkiKontrolByYetki("Tanımlamalar - Eğtimler - Ekle");
            YetkiDegistir = await rolService.YetkiKontrolByYetki("Tanımlamalar - Eğtimler - Değiştir");
            YetkiSil = await rolService.YetkiKontrolByYetki("Tanımlamalar - Eğtimler - Sil");

            await GetData();

            await InvokeAsync(StateHasChanged);
        }
    }

    async Task GetData()
    {
        DataSource = await egitimService.GetEgitimList();
    }

    async Task Add()
    {
        currentDTO = new EgitimDTO();

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("bsPopupAc", "popupKayit");
    }

    async Task Edit(int Id)
    {
        currentDTO = await egitimService.GetEgitim(Id);

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("bsPopupAc", "popupKayit");
    }

    async Task Save()
    {
        if (string.IsNullOrEmpty(currentDTO.Egitim) 
        || string.IsNullOrEmpty(currentDTO.Baslik) 
        || string.IsNullOrEmpty(currentDTO.Kisaltma) 
        || currentDTO.Sira == 0 
        || currentDTO.NormalGunluk == 0
        || string.IsNullOrEmpty(currentDTO.Amac) 
        || string.IsNullOrEmpty(currentDTO.Sart))
        {
            return;
        }

        loading = true;

        var result = await egitimService.InsertOrUpdateEgitim(currentDTO);

        if (result.Success == false)
        {
            loading = false;
            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetMessage", "Uyarı", result.Message, "error");
            return;
        }

        await GetData();

        loading = false;

        await InvokeAsync(StateHasChanged);

        await js.InvokeVoidAsync("bsPopupKapat", "popupKayit");

        await js.InvokeVoidAsync("SweetToast", "Kaydedildi", "success");
    }

    async Task Delete(int Id)
    {
        var dto = await egitimService.GetEgitim(Id);

        var dtos = new List<EgitimDTO>();

        dtos.Add(dto);

        var confirm = await js.InvokeAsync<bool>("SweetConfirm", "Uyarı", "Kayıt silinecek, emin misiniz?", "question", "Evet", "Hayır");

        if (confirm)
        {
            var result = await egitimService.DeleteEgitim(dtos);

            if (result.Success == false)
            {
                await js.InvokeVoidAsync("SweetMessage", "Hata", result.Message, "error");
                return;
            }

            await GetData();

            await InvokeAsync(StateHasChanged);

            await js.InvokeVoidAsync("SweetToast", "Kayıtlar silindi", "success");
        }
    }

    public async Task ExportToExcel()
    {
        using (var workbook = new XLWorkbook())
        {
            IXLWorksheet worksheet = workbook.Worksheets.Add("Sayfa1");

            worksheet.Cell(1, 1).Value = "Sıra";
            worksheet.Cell(1, 2).Value = "Eğtim Adı";
            worksheet.Cell(1, 3).Value = "Kısaltma";
            worksheet.Cell(1, 4).Value = "Tipi";

            for (int i = 1; i <= 4; i++)
            {
                worksheet.Cell(1, i).Style.Font.Bold = true;
            }

            int index = 1;

            foreach (var data in DataSource)
            {
                worksheet.Cell(index + 1, 1).Value = data.Sira;
                worksheet.Cell(index + 1, 2).Value = data.Egitim;
                worksheet.Cell(index + 1, 3).Value = data.Kisaltma;
                worksheet.Cell(index + 1, 4).Value = (data.NormalGunluk == 1 ? "Normal" : (data.NormalGunluk == 2 ? "Normal" : ""));

                index++;
            }

            using (var stream = new MemoryStream())
            {
                workbook.SaveAs(stream);
                var content = stream.ToArray();
                var fileName = "EgitimListesi" + DateTime.Now.ToString("yyyyMMddss") + ".xlsx";
                await js.InvokeAsync<object>("saveAsFile", fileName, Convert.ToBase64String(content));
            }
        }
    }
}