                & validateFarkliAdreseTeslim
                & !string.IsNullOrEmpty(currentDTO.UnvanBasvuru)
                & !string.IsNullOrEmpty(currentDTO.VergiDairesiBasvuru)
                & !string.IsNullOrEmpty(currentDTO.VergiNoBasvuru)
